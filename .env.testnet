# Testnet Environment Configuration
NODE_ENV=testnet
LOG_LEVEL=debug
TRADING_ENABLED=true

# Testnet RPC URLs
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
ARBITRUM_RPC_URL=https://goerli-rollup.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://goerli.optimism.io
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Testnet Wallet Configuration
# IMPORTANT: Use a dedicated testnet wallet with small amounts only!
PRIVATE_KEY=your_testnet_private_key_here
WALLET_ADDRESS=your_testnet_wallet_address_here

# API Keys (same as mainnet)
COINGECKO_API_KEY=your_coingecko_api_key
DEFIPULSE_API_KEY=your_defipulse_api_key
MORALIS_API_KEY=your_moralis_api_key

# Testnet Database (separate from mainnet)
MONGODB_URI=mongodb://localhost:27017/ai_trader_testnet
REDIS_URL=redis://localhost:6379/2

# Aggressive Testnet Trading Parameters (for testing)
MIN_PROFIT_THRESHOLD=0.001   # 0.1% minimum profit
MAX_SLIPPAGE=0.05           # 5% max slippage (higher for testnet)
MAX_POSITION_SIZE=10        # $10 max position for safety
TRADING_ENABLED=true

# AI Configuration for Testing
MODEL_UPDATE_INTERVAL=30000         # 30 seconds (faster updates)
PREDICTION_CONFIDENCE_THRESHOLD=0.5  # Lower threshold for testing

# Testnet Server Configuration
PORT=3002

# Testnet-specific flags
TESTNET_MODE=true
ENABLE_MOCK_DATA=true
SIMULATE_TRADES=false
TESTNET_FAUCET_ENABLED=true

# Performance Testing
ENABLE_PERFORMANCE_LOGGING=true
MAX_CONCURRENT_TESTS=5

# Safety Limits for Testnet
MAX_DAILY_TRADES=100
MAX_DAILY_VOLUME=100
EMERGENCY_STOP_LOSS_THRESHOLD=0.1  # 10% loss triggers emergency stop